<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_contract_view_form" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit.hr.contract.extend</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='salary_info']" position="inside">
                <group>
                    <field name="deduction_basic"/>
                    <field name="deduction_reimb"/>
                    <field name="deduction_unpaid_leave"/>
                    <field name="phone_bill_excess"/>
                    <field name="reimb_exp"/>
                    <field name="reimb_trav"/>
                    <field name="br_allowance_one"/>
                    <field name="br_allowance_two"/>
                    <field name="paye"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
