<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_task_form_inherit_extension" model="ir.ui.view">
        <field name="name">project.task.form.inherit.extension</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm.view_task_form2_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_task_phone_update']" position="after">
                <field name="is_technician" invisible="1"/>
                <label for="partner_mobile" invisible="not is_fsm"/>
                <div class="o_row o_row_readonly" invisible="not is_fsm">
                    <field name="is_task_phone_update" invisible="1"/>
                    <field name="partner_mobile" widget="phone" readonly="is_technician == True"/>
                    <span class="fa fa-exclamation-triangle text-warning oe_edit_only" title="By saving this change, the customer mobile number will also be updated." invisible="not partner_id or not is_task_phone_update"/>
                </div>
            </xpath>
        </field>
    </record>

