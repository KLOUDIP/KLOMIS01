<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--account move form view customization-->
    <record id="account_move_view_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.kloudip_so_coordinator_and_billing_responsible</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!--adding billing by id field-->
            <field name="team_id" position="after">
                <field name="billing_by_id"/>
            </field>

            <xpath expr="//label[@for='journal_id']" position="attributes">
                <attribute name="groups">account.group_account_readonly,account.group_account_invoice</attribute>
            </xpath>

            <xpath expr="//div[@name='journal_div']" position="attributes">
                <attribute name="groups">account.group_account_readonly,account.group_account_invoice</attribute>
            </xpath>

            <xpath expr="//page[@id='aml_tab']" position="attributes">
                <attribute name="groups">account.group_account_readonly,account.group_account_invoice</attribute>
            </xpath>

        </field>
    </record>

    <!--account move search view customizations-->
    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.move.view.search.inherit.kloudip_so_coordinator_and_billing_responsible</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">

            <!--adding filter billing by-->
            <filter name="status" position="after">
                <filter string="Billing By" name="billing_by" context="{'group_by': 'billing_by_id'}"/>
            </filter>

        </field>
    </record>

    <!--account move tree view customizations-->
    <record id="view_out_invoice_tree" model="ir.ui.view">
        <field name="name">account.out.invoice.tree.inherit.kloudip_so_coordinator_and_billing_responsible</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">

            <!--adding field billing by-->
            <field name="invoice_date" position="before">
                <field name="billing_by_id"/>
            </field>

        </field>
    </record>

</odoo>