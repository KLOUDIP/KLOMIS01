<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.access.rights.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Set user group for Create Invoice button in Sale Order -->
            <xpath expr="//form/header/button[3]" position="replace">
                <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                        type="action" class="btn-primary" data-hotkey="q"
                        attrs="{'invisible': [('invoice_status', '!=', 'to invoice')]}" groups="access_rights.group_kloudip_create_invoice"/>
            </xpath>
            <xpath expr="//form/header/button[4]" position="replace">
                <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                        type="action" context="{'default_advance_payment_method': 'percentage'}" data-hotkey="q"
                        attrs="{'invisible': ['|',('invoice_status', '!=', 'no'), ('state', '!=', 'sale')]}"
                        groups="access_rights.group_kloudip_create_invoice"/>
            </xpath>
        </field>
    </record>
</odoo>