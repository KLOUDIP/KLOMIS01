<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_method_sampath" model="payment.method">
        <field name="name">Sampath</field>
        <field name="code">sampath</field>
        <field name="sequence">1000</field>
        <field name="active">False</field>
        <field name="image" type="base64" file="payment_sampath/static/description/icon.png"/>
        <field name="support_tokenization">False</field>
        <field name="support_express_checkout">False</field>
    </record>

    <!--Sampath payment provider-->
    <record id="payment_provider_sampath" model="payment.provider">
        <field name="name">Sampath</field>
        <field name="code">sampath</field>
        <field name="image_128" type="base64" file="payment_sampath/static/description/icon.png"/>
        <field name="module_id" ref="base.module_payment_sampath"/>
        <field name="redirect_form_view_id" ref="redirect_form"/>
        <field name="payment_method_ids" eval="[Command.set([ref('payment_sampath.payment_method_sampath'), ref('payment.payment_method_card')])]"/>
    </record>

</odoo>
