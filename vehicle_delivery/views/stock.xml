<odoo>
    <data>
        <record model="ir.ui.view" id="stock_move_line_tree_view_inherited_kloudip">
            <field name="name">stock.move.line.tree.inherited</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
            <field name="arch" type="xml">
                <field name="lot_id" position="after">
                    <field name="x_partner_id" invisible="1"/>
                    <field name="x_vehicle_id" attrs="{'readonly': [('lot_id','=', False)]}" domain="[('driver_id','child_of', x_partner_id)]" groups="stock.group_production_lot"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_move_line_form_view_inherited_kloudip">
            <field name="name">stock.move.line.form.inherited.kloudip</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <field name="lot_id" position="after">
                    <field name="x_partner_id" invisible="1"/>
                    <field name="x_vehicle_id" attrs="{'invisible': [('lot_id','=', False)]}" domain="[('driver_id','child_of', x_partner_id)]" groups="stock.group_production_lot"/>
                </field>
            </field>
        </record>


        <record model="ir.ui.view" id="stock_picking_view_inherited_kloudip">
            <field name="name">stock.move.line.tree.inherited</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="x_partner_id" invisible="1"/>
                    <field name="x_vehicle_id" attrs="{'invisible': [('lot_id','=', False)]}" domain="[('driver_id','child_of', [x_partner_id])]" groups="stock.group_production_lot"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>