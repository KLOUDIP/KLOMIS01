<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--account move form view customization-->
    <record id="account_move_view_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.kloudip_coupon_customizations</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!--Adding Email Voucher button to header-->
            <header position="inside">
                <button string="Send Voucher" type="object" name="send_coupon_email" class="oe_highlight" icon="fa-envelope" invisible="visible_coupon_group == False or coupons_email_sent == True"/>
                <button string="Send Voucher" type="object" name="send_coupon_email" icon="fa-envelope" invisible="visible_coupon_group == False or coupons_email_sent == False"/>
            </header>

            <!--adding assigned coupons tab-->
            <group id="other_tab_group" position="inside">
                <group string="Coupons" name="coupons" invisible="visible_coupon_group == False">
                    <field name="coupon_ids" widget="many2many_tags" readonly="1"/>
                    <field name="visible_coupon_group" invisible="1"/>
                    <field name="coupons_email_sent" invisible="1"/>
                </group>
            </group>

        </field>
    </record>

</odoo>