<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="loyalty_program_view_form" model="ir.ui.view">
        <field name="name">loyalty.program.view.form.inherit.kloudip_coupon_customizations</field>
        <field name="model">loyalty.program</field>
        <field name="inherit_id" ref="loyalty.loyalty_program_view_form"/>
        <field name="arch" type="xml">

            <!--adding other group-->
            <xpath expr="//group" position="inside">
                <group string="Other" name="other" attrs="{'invisible': [('program_type', 'not in', ('coupons'))]}">
                    <field name="allow_redeem_multiple_coupons" widget="boolean_toggle"/>
                </group>
            </xpath>

            <xpath expr="//notebook" position="attributes">
                <attribute name="attrs">{'invisible': [('program_type', 'in', ('ewallet'))]}</attribute>
            </xpath>

        </field>
    </record>

</odoo>