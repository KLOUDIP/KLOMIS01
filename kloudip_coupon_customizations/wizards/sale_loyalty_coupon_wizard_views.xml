<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_loyalty_coupon_wizard_views" model="ir.ui.view">
        <field name="name">sale.loyalty.coupon.wizard.view.form.inherit.kloudip_coupon_customizations</field>
        <field name="model">sale.loyalty.coupon.wizard</field>
        <field name="inherit_id" ref="sale_loyalty.sale_loyalty_coupon_wizard_view_form"/>
        <field name="arch" type="xml">

            <!--invisible coupon code-->
            <field name="coupon_code" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!--adding coupon id to the form view-->
            <field name="coupon_code" position="after">
                <field name="coupon_id" required="1" domain="[('invoice_partner_id', '=', partner_id), ('points', '>', 0), ('state', '=', 'new')]" options="{'no_create': True}"/>
                <field name="partner_id" readonly="1" invisible="1"/>
            </field>

        </field>
    </record>

</odoo>