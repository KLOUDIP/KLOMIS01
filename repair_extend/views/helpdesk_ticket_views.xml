<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="helpdesk_ticket_view_form_inherit_repair_extend" model="ir.ui.view">
        <field name='name'>helpdesk.ticket.form.inherit.repair.extend</field>
        <field name="model">helpdesk.ticket</field>
        <field name="priority">45</field>
        <field name="inherit_id" ref="helpdesk_repair.helpdesk_ticket_view_form_inherit_stock_user"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_repair_order_form']" position="attributes">
                <attribute name="groups">stock.group_stock_user,sales_team.group_sale_salesman</attribute>
            </xpath>
            <xpath expr="field[@name='use_product_repairs']" position="attributes">
                <attribute name="groups">stock.group_stock_user,sales_team.group_sale_salesman</attribute>
            </xpath>
        </field>
    </record>

</odoo>
