<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_repair_extend" model="ir.ui.view">
            <field name="name">sale.order.form.repair.extend</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="device_repair_order_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_sale_order_form_inherit_repair_extend" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.repair</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="repair.view_sale_order_form_inherit_repair"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_show_repair']" position="after">
                    <button
                            name="action_show_device_repair"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-cog"
                            string="Device Repair"
                            invisible="not device_repair_order_id"
                            groups="stock.group_stock_user,sales_team.group_sale_salesman">
                    </button>
                </xpath>
                <xpath expr="//button[@name='action_show_repair']" position="attributes">
                    <attribute name="groups">stock.group_stock_user,sales_team.group_sale_salesman</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
