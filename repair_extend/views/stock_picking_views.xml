<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_form_inherit_repair_extend" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.repair.extend</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='owner_id']" position="after">
                    <field name="repair_ids" widget="many2many_tags" domain="[('partner_id', '=', partner_id)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
