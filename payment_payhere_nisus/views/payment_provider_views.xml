<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Payhere Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible="code != 'payhere_nisus'">
                    <field name="payhere_merchant_number"/>
                    <field name="payhere_merchant_secret"/>
                    <a colspan="2" href="https://www.payhere.lk/account/" target="_blank">Signup for PayHere account</a>
                </group>
            </group>
        </field>
    </record>
</odoo>
