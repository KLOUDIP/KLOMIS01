<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partners_form" model="ir.ui.view">
        <field name="name">res_partner.view.form.calendar</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <sheet position="before">
                <header>
                    <field name="is_blocked" invisible="1"/>
                    <button name="action_block_contact" type="object" string="Block" class="btn-primary" attrs="{'invisible': [('is_blocked','=',True)]}"
                            confirm="Are you sure you need to block this contact?" groups="account.group_account_user,account.group_account_invoice"/>

                    <button name="action_unblock_contact" type="object" string="Blocked" class="btn-danger" attrs="{'invisible': [('is_blocked','!=', True)]}"
                            confirm="Are you sure you need to unblock this contact?" groups="account.group_account_user,account.group_account_invoice"/>
                </header>
            </sheet>
            <xpath expr="//div[@name='button_box']" position="after">
                <widget name="web_ribbon" title="Blocked" bg_color="bg-danger" attrs="{'invisible': [('is_blocked','!=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
