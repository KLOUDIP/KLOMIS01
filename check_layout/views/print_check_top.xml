<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="print_check_top" inherit_id="l10n_us_check_printing.print_check_top">
            <xpath expr="//div" position="replace">
                <div class="page">
                    <div t-att-data-oe-model="o._name" t-att-data-oe-id="o.id" t-foreach="o._check_get_pages()" t-as="page" class="page article ckca_page ckca_top_page" t-attf-style="top: {{ o.company_id.account_check_printing_margin_top }}in; left: {{ o.company_id.account_check_printing_margin_left }}in; right: {{ o.company_id.account_check_printing_margin_right }}in;">
                        <div style="width:180mm;">
                            <table style="margin-left: 172mm; font-size: 12px;" width="240mm" height="6mm">
                                <tr>
                                    <td style="border-style : hidden!important;" class="text-center" width="6mm" height="6mm">
                                        <span t-esc="str(o.date)[8:9]"></span>
                                    </td>
<!--                                    <td class="text-center" width="6mm" height="6mm" style="visibility:hidden;">.</td>-->

                                    <td style="border-style : hidden!important;" class="text-center" width="6mm" height="6mm">
                                        <span t-esc="str(o.date)[9:10]"></span>
                                    </td>
<!--                                    <td class="text-center" width="6mm" height="6mm" style="visibility:hidden;">.</td>-->

                                    <td style="border-style : hidden!important;" class="text-center" width="6mm" height="6mm">
                                        <span t-esc="str(o.date)[5:6]"></span>
                                    </td>
<!--                                    <td class="text-center" width="6mm" height="6mm" style="visibility:hidden;">.</td>-->

                                    <td style="border-style : hidden!important;" class="text-center" width="6mm" height="6mm">
                                        <span t-esc="str(o.date)[6:7]"></span>
                                    </td>
<!--                                    <td class="text-center" width="6mm" height="6mm" style="visibility:hidden;">.</td>-->

                                    <td style="border-style : hidden!important;" class="text-center" width="6mm" height="6mm">
                                        <span t-esc="str(o.date)[0:1]"></span>
                                    </td>

                                    <td style="border-style : hidden!important;" class="text-center" width="6mm" height="6mm">
                                        <span t-esc="str(o.date)[1:2]"></span>
                                    </td>
                                    <td style="border-style : hidden!important;" class="text-center" width="6mm" height="6mm">
                                        <span t-esc="str(o.date)[2:3]"></span>
                                    </td>
<!--                                    <td class="text-center" width="6mm" height="6mm" style="visibility:hidden;">.</td>-->

                                    <td style="border-style : hidden!important;" class="text-center" width="6mm" height="6mm">
                                        <span t-esc="str(o.date)[3:4]"></span>
                                    </td>
                                </tr>
                            </table>
                            <div style="margin-top: 10mm;">
                                <div style="margin-left: 52mm; font-size: 14px; margin-bottom: 0px; padding: 0;"><span
                                        t-field="o.partner_id"></span>
                                </div>
                                <div style="margin-left: 0px; font-size: 12px; margin-top: 0px; padding: 0;visibility:hidden;">
                                    <span>.</span>
                                </div>

                                <div style="margin-left: 56mm; font-size: 13px; float: left; width: 10cm; line-height: 2.5"><span
                                        t-field="o.check_amount_in_words"></span> Only <br/>
                                    *************************************************
                                </div>
                                <div style="margin-left: 184mm; font-size: 14px; margin-top: 31px;">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td style="border-style : hidden!important;">
                                                    <span
                                                            t-esc="'{0:,.2f}'.format(float(o.amount)).replace(',', ',')"></span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

    </data>
</odoo>