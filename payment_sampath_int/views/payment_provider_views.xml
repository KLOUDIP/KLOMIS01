<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Payment provider form view customizations-->
    <record id="payment_provider_view_form" model="ir.ui.view">
        <field name="name">payment.provider.view.form.inherit.payment_sampath_int</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible="code != 'sampath_int'">
                    <field name="sampath_int_client_id" string="ClientID" required="code == 'sampath_int' and state != 'disabled'"/>
                    <field name="sampath_int_auth_token" required="code == 'sampath_int' and state != 'disabled'" password="True"/>
                    <field name="sampath_int_hmac_secret" required="code == 'sampath_int' and state != 'disabled'" password="True"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
