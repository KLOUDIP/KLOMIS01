<?xml version="1.0"?>
<odoo>
    <record id="appointment_type_view_form" model="ir.ui.view">
        <field name="name">appointment.type.view.form.inherit.fsm_website_appointment</field>
        <field name="model">appointment.type</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="appointment.appointment_type_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reminder_ids']" position="before">
                <field name="fsm_task_create"/>
                <field name="project_id" attrs="{'invisible': [('fsm_task_create', '=', False)], 'required': [('fsm_task_create', '=', True)]}"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                        name="action_view_fsm_tasks"
                        string="Tasks"
                        type="object"
                        icon="fa-tasks"
                        help="Tasks related to this appointment type"
                        attrs="{'invisible': [('task_count', '=', 0)]}">
                    <field string="Tasks" name="task_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
